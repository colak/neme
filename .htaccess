RewriteRule ^blog/newport-beach-film-festival-2009/?$ /blog/nbff-2009 [R=301,L]
RewriteRule ^250/?$ https://www.neme.org/texts/from-zombie-to-cyborg [R=301,L]
RewriteRule ^calls/?$ https://www.neme.org/blog/ [R=301,L]
RewriteRule ^1721/pq-2015/?$ https://www.neme.org/texts/from-zombie-to-cyborg [R=301,L]
RewriteRule ^category/calls/?$ /blog/ [R=301,L]
RewriteRule ^category/intransition/?$ /projects/in-transition-cyprus-2006 [R=301,L]
RewriteRule ^category/ideodrome2006/?$ /projects/ideodrome-2006 [R=301,L]
RewriteRule ^article/?$ /texts/ [R=301,L]
RewriteRule ^call/?$ /blog/ [R=301,L]
RewriteRule ^(\d+)/([\w\-]+)$ /texts/$2 [R=301,L]
RewriteRule ^texts/open-city-stepping-in-from-the-edge/?$ /texts/open-city [R=301,L]
RewriteRule ^texts/istanbul-biennial-10-nightcomers/?$ /blog/istanbul-biennial-10-nightcomers [R=301,L]
RewriteRule ^texts/roc-14/?$ /blog/roc-14 [R=301,L]
